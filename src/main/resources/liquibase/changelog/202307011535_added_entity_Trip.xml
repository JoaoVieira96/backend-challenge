<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="202307011509-1" author="joao">
        <createTable tableName="trip">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pick-up-id" type="bigint"/>
            <column name="drop-off-id" type="bigint"/>
            <column name="pick-up-date" type="datetime"/>
            <column name="drop-off-date" type="datetime"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="trip" baseColumnNames="pick-up-id" constraintName="fk_zone_pickup" referencedTableName="zone"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="trip" baseColumnNames="pick-up-id" constraintName="fk_zone_dropoff" referencedTableName="zone"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
